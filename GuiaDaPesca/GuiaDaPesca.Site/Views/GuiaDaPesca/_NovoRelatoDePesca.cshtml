@model GuiaDaPesca.Site.ViewModels.RelatoDePescaViewModel

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Novo comentario</h3>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(x => x.Comentario.Descricao, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    <textarea rows="5" id="Descricao" class="form-control" placeholder="Descricao"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button onclick="SalvarComentario();" class="btn btn-default">Incluir</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function SalvarComentario() {
        $.ajax(
            {
                type: 'POST',
                url: '/RelatoDePesca/Novo',
                dataType: 'application/json; charset=utf-8',
                data: { comentarioDescricao: document.getElementById('Descricao').value, localDePescaId: document.getElementById('localDePescaSelecionado').value },
                success: function (retorno) {

                    console.log(retorno);
                }
            });
    }
</script>